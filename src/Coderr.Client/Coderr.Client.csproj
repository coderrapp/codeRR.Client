<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net45;net452;net40;net46</TargetFrameworks>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\Coderr.Client.xml</DocumentationFile>

    <PackageReleaseNotes>Added environment feature and corrected collection of arrays in Management Instrumentation</PackageReleaseNotes>
    <Version>1.1.1</Version>
  </PropertyGroup>
  
  <PropertyGroup>
    <PackageId>Coderr.Client</PackageId>
    <Authors>1TCompany AB</Authors>
    <Description>Automated exception handling for .NET applications</Description>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Copyright>Copyright 2019 (c) 1TCompany AB. All rights reserved.</Copyright>
    <PackageTags>logger exceptions analysis</PackageTags>
    <PackageIconUrl>https://coderr.io/images/nuget_icon.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/coderrio/coderr.client</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseUrl>https://raw.githubusercontent.com/coderrio/coderr.client/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://coderr.io</PackageProjectUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>
  
  <ItemGroup>
    <Content Include="README.txt">
      <Pack>true</Pack>
      <PackagePath>README.txt</PackagePath>
    </Content>
  </ItemGroup>
  
  <ItemGroup>
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Management" />
  </ItemGroup>
</Project>
